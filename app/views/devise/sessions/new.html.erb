<section class="p-signIn">
  <div class="p-signIn__panel">
    <%= notice %>
    <%= alert %>
    <div class="p-signIn__panelInner">
      <h1 class="p-signIn__panelHeading"></h1>
      <div class="p-signIn__panelBody">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="c-group -space-S">
              <div class="field">
                <%= f.email_field :email, autofocus: true , placeholder: 'メールアドレス', class: 'c-form__control' %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード', class: 'c-form__control' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label 'ログインを記憶', for: :user_remember_me %>
                </div>
              <% end -%>
              <div class="actions">
                <%= f.submit 'ログイン', class: 'c-btn-primary -block u-text-size-M' %>
              </div>
            </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</section>
